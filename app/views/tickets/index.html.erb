<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Seat id seq</th>
      <th scope="col">Address</th>
      <th scope="col">Price</th>
      <th scope="col">Email address</th>
      <th scope="col">Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.seat_id_seq %></td>
        <td><%= ticket.address %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.email_address %></td>
        <td><%= ticket.phone %></td>
        <td><%= link_to 'Show', ticket, class:'btn btn-info' %></td>
        <% if ticket.user == current_user %>
            <td><%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path, class: 'btn btn-success'  %>
